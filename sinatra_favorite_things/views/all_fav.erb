<h1>All Favorites</h1>

<div>
  <% @items.each do |item| %>
    <span> Item: <%= item.name %> </span>
    <span> Rank: <%= item.rank %>  </span>
    </br>
  <% end %>

  <form class="form" action="/" method="post">
    <div class="form-group">
      <label for="thing">Item name:</label>
      <input class="form-control" type="text" name="item" value="">
    </div>
    <div class="form-group">
      <label for="ranking">Rank:</label>
      <input class="form-control" type="text" name="rank" value="">
    </div>
    <button class="btn btn-primary" type="submit" name="button">Add</button>
  </form>
</div>